<Page
    x:Class="C____RPG.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:C____RPG"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <SwapChainPanel x:Name="swapChainPanel" >

		<Canvas Width="auto" Height="auto">
		
			<Canvas.Resources>
                
                <Storyboard x:Name="myStoryboard">
                    <PointAnimation x:Name="Blue_Circle_Animation"
                          Storyboard.TargetProperty="Center"
                          Storyboard.TargetName="MyAnimatedEllipseGeometry"
            
                          RepeatBehavior="1x"  EnableDependentAnimation="True"/>

                </Storyboard>
                <Storyboard x:Name="ImageMovement">
                    <PointAnimation x:Name="Image_Animation"
                          Storyboard.TargetProperty="Center"
                          Storyboard.TargetName="image_anim"
            
                          RepeatBehavior="1x"  EnableDependentAnimation="True"/>

                </Storyboard>
			</Canvas.Resources>
      <Ellipse x:Name="image_anim"  Canvas.Top="200" Canvas.Left="200" Height="200" Width="300">
        <Ellipse.Fill>
          <ImageBrush ImageSource="StoreLogo.png" />
        </Ellipse.Fill>
      </Ellipse>
			<Path Fill="Blue">

				<Path.Data>
                    <EllipseGeometry x:Name="MyAnimatedEllipseGeometry" Center="200,100" RadiusX="55" RadiusY="55" />
				</Path.Data>
			</Path>
			<Button x:Name="Test_but" Click="Start_Animation" Content="Button" Canvas.Left="118" Canvas.Top="349" Height="100" Width="225"/>
		</Canvas>
    </SwapChainPanel>

    

</Page>
